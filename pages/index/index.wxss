/**index.wxss**/
.navi-title {
  padding-left: 10rpx;
  padding-bottom: 10rpx; 
  font-weight: bold;
  font-size: xx-large;
  color: #252A34;
}

.logo {
  padding-left: 30rpx;
  padding-bottom: 10rpx;  
  height: 75rpx;
  width: 75rpx;
  /* opacity: 0.9; */
}

.page-swiper {
  padding-top: 20rpx;
  height: 900rpx; 
  background-color: #FAFAFA;
}

.page-swiper-item {
  padding: 20rpx 30rpx;
  box-sizing: border-box; 
  height: 100%; 
  width: 100%;
}

.page-card {
  padding-top: 20rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  border: 1px solid #D3D4D8; 
  box-shadow: 0.7px 2px 10px 1.7px #D3D4D8;  
  background-color: #F5F5F5; 
  opacity: 0.95; 
  border-radius: 10px;
  height: 100%;
  width: 100%;
  box-sizing: border-box; 
}

.page-image {
  width: 100%;
  height: 530rpx; 
  /* background-color: #123;  设置与card背景色一致，掩饰图片填充不全*/
}

.page-title {

  min-height: 150rpx;
  max-height: 150rpx;
  font-size: 16px;
  color: #252A34;
  align-items: center;  
  display: flex;  

}

.page-subTitle {
  min-height: 75rpx;
  font-size: 13px;
  color: #888;
  /* background-color: #260;  */
  align-items: center;
  display: flex;
}

 .center {
  display: flex;
  justify-content: center;  
  align-items: center;  
}  

.line {
  width:100%;
  height:2rpx;
  background-color:#FF2E63;
  /* opacity: 0.9;  */
}

.page-date {
  flex: 1;
  min-height: 60rpx;
  font-size: 12px;
  color: #888;
  align-items: center; 
  display: flex;
}

.page-share {
  font-size: 12px;
  color: #888;
}

.btn-view {
   /* padding-top: 0rpx;  */
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 20rpx; 
  flex: 1;
  /* background-color: #888; */
  display: flex;
  justify-content: center;  
  align-items: center; 
}

button {
  flex: 1;
  border-radius: 50px;
  box-shadow: 1px 1px 10px 2px #D3D4D8; 
  background-color: #FF2E63;
  color: #FAFAFA;
  font-weight: 500;
}

button::after {
  /* content:""; */
  width:200%; 
  height:200%; 
  border:1px solid rgba(0, 0, 0, 0.2);
  border-radius: 50px;
}

.button-hover{
  border-radius: 50px; 
  background-color: #FF2E63;
  opacity: 0.4;
}


